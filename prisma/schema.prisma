generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  email      String
  rank       String
  name       String
  enlistedAt DateTime
  Task       Task[]
  RandomSeed RandomSeed[]
  Exempt     Exempt[]
}

model Role {
  id   String @id @default(uuid())
  name String
  Task Task[]
}

model Order {
  id         String       @id @default(uuid())
  actedAt    DateTime
  Task       Task[]
  RandomSeed RandomSeed[]
}

model RandomSeed {
  id      String @id @default(uuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])
  number  Int
}

model Task {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  roleId  String
  role    Role   @relation(fields: [roleId], references: [id])
}

model ExemptExcuse {
  id     String   @id @default(uuid())
  reason String
  Exempt Exempt[]
}

model Exempt {
  id        String       @id @default(uuid())
  startedAt DateTime
  endedAt   DateTime
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  excuseId  String
  excuse    ExemptExcuse @relation(fields: [excuseId], references: [id])
}
